//- button mixin
mixin button(url, text)
  table.btn.btn-primary(border='0', cellpadding='0', cellspacing='0' style="width: 100%;")
    tbody
      tr
        td(align="center")
          table(border='0', cellpadding='0', cellspacing='0')
            tbody: tr: td(align="center" style="display: inline-block; margin: 0; padding: 12px 25px; background-color: #d9e2ec; font-family: sans-serif; color: #c99a2e;"): a(href=url, target='_blank' style="text-decoration: none; color: #334e68;")= text

//- The Email
doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
  body
    table.body(border='0', cellpadding='0', cellspacing='0' style="width:100%;")
      tr
        td.container
          table(border='0', cellpadding='0', cellspacing='0' style="max-width: 580px; Margin: 0 auto; width:100%; background-color: #334e68")
            tr
              td
                table(border='0', cellpadding='0', cellspacing='0' style="width:100%; background-color: #c99a2e;")
                  tr
                    td(style="padding-top: 10px; padding-bottom: 10px;")
                      | &nbsp;
                table(border='0', cellpadding='0', cellspacing='0' style="width:100%;")
                  tr
                    td(align="center" style="padding-left: 20px; padding-right: 20px;")
                      h1(style="width: 146px; text-transform: uppercase; font-size: 12px; letter-spacing: 4px; color: #d9e2ec")
                        span(style="display: block; text-transform: uppercase; font-size: 43px; letter-spacing: 11px;") Zuni
                        | Forty Fourth
                table(border='0', cellpadding='0', cellspacing='0' style="width:100%;")
                  tr
                    td(style="font-family: sans-serif; padding-left: 20px; padding-right: 20px;")
                      block content
