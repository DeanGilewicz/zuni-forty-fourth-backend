extends email-layout

block content
  table(border='0', cellpadding='0', cellspacing='0' style="width:100%;")
    tr
      td(align="center")
        h2(style="font-family: sans-serif; font-size: 20px; color: #c99a2e;") Password Reset
  table(border='0', cellpadding='0', cellspacing='0' style="width:100%;")
    tr
      td(style="font-family: sans-serif; color: #d9e2ec;")
        p Hello #{user.firstName},
        p You have requested a password reset.
        p Your reset code is:
          |
          |
          span(style="font-family: sans-serif; color: #c99a2e;") #{user.verifyCode}
        p Please click the following button to continue with resetting your password.
        br
  +button(resetUrl, 'Reset my Password â†’')
  table(border='0', cellpadding='0', cellspacing='0' style="width:100%;")
    tr
      td(style="font-family: sans-serif; color: #d9e2ec;")
        br
        p If you are unable to click the password reset button please visit:
        p
          a(href=`${resetUrl}` target="_blank" style="text-decoration: underline; font-family: sans-serif; color: #c99a2e;") #{resetUrl}
        br
        p(style="font-size: 14px;")
          em Link is valid for 60 minutes. If you didn't request a password reset, please contact website admin.